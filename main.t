fun init() {
	var i
	i : 1

	html("<center>")
	html("<h1 style='font-size: 5em'>tranquility go</h1>\n")
	html("<div style='width: 100vw'>")
	html("<p style='font-size: 6em;background-image: linear-gradient(to left, violet, indigo, blue, green, yellow, orange, red);-webkit-background-clip: text; color: transparent;word-wrap: break-word;'>brrrrr")
	loop {
		until .i > 1000
		html("r")
		i : .i + 1
	}
	html("</p></div></center>\n")
}
